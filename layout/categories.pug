extends base
block title
  title= page.title + ' | ' + config.title
block content
  .post
    h1.post-title= page.title
    .post-content
      .tagcloud
        for tag in site.categories.toArray()
          a(href='/categories/' + tag.name, title=tag.name, rel= tag.length) #{tag.name}

      for tag in site.categories.toArray()
        .one-tag-list
          span.fa.fa-tag.tag-name(id=tag.name)
            span.tag-text #{tag.name}
          for post in tag.posts.toArray()
            .post-preview
              a(href=config.root + post.path, title=post.title) #{post.title}
